# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000

# Python Backend URL
# Leave empty to use local Python backend (spawn child process)
# Set to deployed backend URL for production (e.g., https://your-app.up.railway.app)
NEXT_PUBLIC_BACKEND_URL=

# Example for Railway:
# NEXT_PUBLIC_BACKEND_URL=https://your-app-name.up.railway.app

# Example for Render:
# NEXT_PUBLIC_BACKEND_URL=https://your-app-name.onrender.com

# Feature Flags
NEXT_PUBLIC_ENABLE_REALTIME_PRICING=true
NEXT_PUBLIC_ENABLE_PATH_STORAGE=false
NEXT_PUBLIC_MAX_PATHS=10000
NEXT_PUBLIC_MAX_STOCKS=10

# Algorithm Configuration
NEXT_PUBLIC_DEFAULT_ALGO=RLSM
NEXT_PUBLIC_ENABLE_TORCH_ALGOS=false  # Set to false on Vercel due to size limits

# Model Configuration
NEXT_PUBLIC_DEFAULT_MODEL=BlackScholes
NEXT_PUBLIC_DEFAULT_STRIKE=100
NEXT_PUBLIC_DEFAULT_SPOT=100
NEXT_PUBLIC_DEFAULT_RATE=0.05
NEXT_PUBLIC_DEFAULT_VOLATILITY=0.2
NEXT_PUBLIC_DEFAULT_MATURITY=1.0

# Vercel Configuration (set these in Vercel dashboard)
# VERCEL_URL - automatically set by Vercel
# VERCEL_ENV - automatically set by Vercel (production/preview/development)

# Optional: Telegram Notifications (for background jobs)
# TELEGRAM_BOT_TOKEN=
# TELEGRAM_CHAT_ID=

# Optional: Database (if storing results)
# DATABASE_URL=

# Optional: Redis (for caching)
# REDIS_URL=

# Development
NODE_ENV=development
